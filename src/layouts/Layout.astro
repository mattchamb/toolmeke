---
export interface Props {
  title?: string;
  description?: string;
  featured_image?: string;
}

const { title = "ToolMeke - Independent Tool Price Comparison", description = "Independent tool price comparison across New Zealand hardware stores - no affiliations, just helpful data", featured_image } = Astro.props;
---

<!doctype html>
<html lang="en-nz">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    {featured_image && <meta property="og:image" content={featured_image} />}
    
    <!-- Bulma CSS for styling -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.0/css/bulma.min.css">
  </head>
  <body>
    <!-- Navigation -->
    <nav class="navbar is-dark" role="navigation" aria-label="main navigation">
      <div class="container">
        <div class="navbar-brand">
          <a href="/" class="navbar-item is-size-4 has-text-weight-light">
            ToolMeke
          </a>
        </div>
        <div class="navbar-menu">
          <div class="navbar-start">
            <a class="navbar-item" href="/">
              Home
            </a>
            <a class="navbar-item" href="/brands/">
              Brands
            </a>
            <a class="navbar-item" href="/tools/">
              Tools
            </a>
            <a class="navbar-item" href="/about/">
              About
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="footer has-background-dark has-text-light">
      <div class="container">
        <div class="content has-text-centered">
          <p class="is-size-6 has-text-grey-light">
            ToolMeke is an independent project with no affiliation to any hardware stores or manufacturers.
          </p>
          <p class="is-size-6 has-text-grey-light">
            We don't earn commissions from purchases - this is purely a helpful resource for the NZ tool community.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  /* Custom styles */
  .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0,0,0,.1);
    transition: all 0.2s ease-in-out;
  }
  
  .card {
    transition: all 0.2s ease-in-out;
  }
</style>
